<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_robotslist"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="96dp" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/robot_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:layout_toEndOf="@+id/robot_icon"
                android:layout_toRightOf="@+id/robot_icon"
                android:text="@string/r_name"
                android:textAppearance="@android:style/TextAppearance.Material.Title" />

            <View
                android:id="@+id/robot_icon"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="24dp"
                android:layout_marginStart="24dp"
                android:background="@drawable/industrial_robot" />

            <View
                android:id="@+id/copy_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignBottom="@+id/robot_icon"
                android:layout_alignLeft="@+id/delete_icon"
                android:layout_alignStart="@+id/delete_icon"
                android:background="@drawable/content_copy" />

            <View
                android:id="@+id/delete_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/robot_icon"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:background="@drawable/delete" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>